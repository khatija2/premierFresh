<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Email</title>
</head>
<body class="admin">
    <nav class="navbar fixed-top navbar-expand-lg navbar-light" style="background-color: white">
        <div class="container-fluid">
          <a class="navbar-brand ms-0.5" id="brandName">Premier Fresh Produce Admin</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/admin/productList" id="home-link">Item List</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/users" id="home-link">Users</a>
             </li>
             <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/orders" id="home-link">Orders</a>
             </li>
			<li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/dailyOrders" id="home-link">Daily Orders</a>
             </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= user.username %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="/admin/myAccount">My account</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout">Logout</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
	<div class="email-form">
<div class="login_form">
		<form  action="/admin/newEmail/<%=user._id%>?_method=PUT" method="POST" id="change-email">
			 <h3>Change Email Address</h3>
			<div class="mb-3">
 				<input type="email" class="form-control" id="email" name="email" placeholder="New Email Address">
			</div>
			<div class="mb-3">
 				<input type="email" class="form-control" id="email2" name="email2" placeholder="Retype Email Address">
			</div>
            <button type="button" class="form_button" id="email_button">Submit</button>
        </form>
		<div id="email-match"></div>
		<div class="form-cont">
		<% if (errorMessage && errorMessage.length > 0) { %>
		<div class="alert-danger">
		<%= errorMessage %>
  		<span class="alertbtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		</div>
		<% } %>
		</div>
    	</div>
</div>
	<script>
		document.querySelector("#email_button").addEventListener('click', () => {
	if (document.querySelector("#email").value === document.querySelector("#email2").value) {
		 document.querySelector("#change-email").submit();
	} else {
		document.querySelector("#email-match").innerHTML = `<div class="form-cont">
	<div class="alert-danger">
	Emails Do Not Match!
  	<span class="alertbtn" onclick="this.parentElement.style.display='none';">&times;</span> 
	</div>
	</div>`;
	}	
	})
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>  
</body>
</html>