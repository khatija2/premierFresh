<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premier Fresh</title>
</head>
<body>
<div class="landing">
    <div class="heading_landing">
        <h1>Premier Fresh Wholesale</h1>
        <h3 id="description">Order Application</h3>
    </div>
<div class="login_form">
		<form  action="/<%=userId%>/<%=token%>" method="POST" id="set-pass">
			 <h3>New Password</h3>
			<div class="mb-3">
            <input type="password" class="form-control" id="password" name="password" placeholder="New Password" required>
            </div>
			<div class="mb-3">
                <input type="password" class="form-control" id="password2" name="password2" placeholder="Re-type Password" required>
            </div>
            <button type="button" class="form_button" id="setpass_button">Submit</button>
        </form>
		<div id="pass-match"></div>
		<div class="form-cont">
		<% if (successMessage && successMessage.length > 0) { %>
		<div class="alert-success">
		<%= successMessage %>
  		<span class="alertbtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		</div>
		<% } %>
		<% if (errorMessage && errorMessage.length > 0) { %>
		<div class="alert-danger">
		<%= errorMessage %>
  		<span class="alertbtn" onclick="this.parentElement.style.display='none';">&times;</span> 
		</div>
		<% } %>
		</div>
    	</div>
	</div>
	<script>
		document.querySelector("#setpass_button").addEventListener('click', () => {
	if (document.querySelector("#password").value === document.querySelector("#password2").value) {
		 document.querySelector("#set-pass").submit();
	} else {
		document.querySelector("#pass-match").innerHTML = `<div class="form-cont">
	<div class="alert-danger">
	Passwords Do Not Match!
  	<span class="alertbtn" onclick="this.parentElement.style.display='none';">&times;</span> 
	</div>
	</div>`;
	}	
	})
	</script>
	 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>  
</body>
</html>