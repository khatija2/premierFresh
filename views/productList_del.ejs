<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
</head>
<body class="admin">
    <nav class="navbar fixed-top navbar-expand-lg navbar-light" style="background-color: white">
        <div class="container-fluid">
          <a class="navbar-brand ms-0.5" id="brandName">Premier Fresh Produce Admin</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#" id="home-link">Item List</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#" id="home-link">Users</a>
             </li>
             <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/myAccount" id="home-link">Orders</a>
             </li>
			<li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/dailyOrders" id="home-link">Daily Orders</a>
             </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Profile
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="#">My account</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout">Logout</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
	 <div class="page_lay">
        <div class="product_page">
             <h2>Item List</h2>
             <button id="add-item" data-bs-toggle="modal" data-bs-target="#myAddModal">+ Add Item</button>
        </div>
           <div class="list_container">
			  <% items.forEach((item) => { %>
             <div class="grid-container">
               <div class="grid-column1">
                 <div class="grid-item1" id="item">
                       <h4><%= item.product_name %></h4>
                       <h6><%= item.code %></h6>
                 </div>
               </div>
               <div class="grid-column2">
                 <div class="grid-item2">
					 <% if (item.stock === "on") { %>
				   <h6 id="in-stock"><strong>In Stock</strong></h6>
					 <% } else { %>
                   <h6 id="no-stock"><strong>No Stock</strong></h6>
					 <% } %>
                 </div>
                 <div class="grid-item4">
                       <a role="button" class="btn" id="edit-item">Edit</a>
                       <button id="delete-btn" data-bs-toggle="modal" data-bs-target="#myDeleteModal">Delete</button>
                 </div>
               </div>
             </div>
            <% }) %>
           </div>
        </div>
		<form action="/admin/productList/<%= item._id %>?_method=DELETE" method="POST">
        <div class="modal" id="myDeleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Delete Item</h5>
                <a role="button" class="btn-close" href="/admin/productList"  aria-label="Close"></a>
              </div>
              <div class="modal-body">
                <p>Are you sure you want to delete this item?</p>
              </div>
              <div class="modal-footer">
                <a role="button" class="btn btn-outline-secondary" href="/admin/productList" >Close</a>
                <button type="submit" class="btn btn-primary">Yes, delete</button>
              </div>
            </div>
          </div>
        </div>
		</form>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>  
<script>
	
var myModal = new bootstrap.Modal(document.getElementById('myDeleteModal'))
myModal.show()

	
</script>
    
</body>
</html>